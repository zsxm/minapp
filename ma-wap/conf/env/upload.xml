<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE env PUBLIC "-//GOYY//DTD ENV 1.0//EN" "http://goyy.org/dtd/env-1.0.dtd">
<configuration>
	<environments default="development">
		<environment id="development">
			<upload name="minapp">
				<enable>true</enable>
				<dir>/assets/hnupl</dir>
				<url>/upls</url>
				<maxSize>5242880</maxSize>
			</upload>
		</environment>
		<environment id="test">
			<upload name="minapp">
				<enable>false</enable>
				<dir>/app/assets/hnupl</dir>
				<url>http://bl.hn.yixin.com/hnupl</url>
				<maxSize>5242880</maxSize>
			</upload>
		</environment>
		<environment id="production">
			<upload name="minapp">
				<enable>false</enable>
				<dir>/assets/hnupl</dir>
				<url>http://assets.yixinhuinong.com/hnupl</url>
				<maxSize>5242880</maxSize>
			</upload>
		</environment>
	</environments>
</configuration>
